// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  student_id Int           @id
  email      String        @unique
  role       Role          @default(STUDENT) 
  password   String?
  firstname  String
  lastname   String
  created_on DateTime      @default(now())
  Submission Submissions[]
  Answers    Answers[]
}

model Questions {
  question_id          Int       @id
  question_title       String
  question_description String
  points               Int
  created_on           DateTime  @default(now())
  global_answer        Boolean
  Answers              Answers[]
}

model Answers {
  answer_id      Int       @id
  question_id    Int
  question       Questions @relation(fields: [question_id], references: [question_id])
  student_id     Users?     @relation(fields: [for_student_id], references: [student_id])
  for_student_id Int?
  answer         String
}

model Submissions {
  submission_id Int      @id
  student       Users    @relation(fields: [student_id], references: [student_id])
  student_id    Int
  flag          String
  correct       Boolean
  firstblood    Boolean
  created_on    DateTime @default(now())
}


enum Role {
  STUDENT
  VIEWER
  ADMIN
}